#include <stdio.h>
//ввод в радианах!!!
int fact(int num)
{
	if(num == 0) return 1;
	int rez = 1;
	for (int i = 1; i<=num; i++)
	{
		rez*=i;
	}
	return rez;
}
double step(double chis, long st)
{
	if (st == 0) return 1;
	if (st<0) return step(1/chis, -st);
	return chis * step(chis, st-1);
}
long double my_sin(double x)
{
	double res = 0;
	for (int i = 0; i < 6; i++)
	{
		int a = i*2+1;
		if((a+1)%4==0)
		{
			res-=step(x, a)/fact(a);
		}
		else
		{
			res+=step(x, a)/fact(a);
		}
	}
	return res;
}
int main(void) {
	double a;
	scanf("%lf", &a);
	printf("%llf, %lf", my_sin(a), sin(a));
	return 0;
}
