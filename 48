#include <stdio.h>
#include <math.h>
int main(void) {
	int N;
	scanf("%d", &N);
	double mas[N];
	for (int i = 0; i < N; i++)
	{
		scanf("%lf", &mas[i]);
	}
	double sr_ar = 0;
	double sr_geo = 1;
	for (int i = 0; i < N; i++)
	{
		sr_ar+=mas[i];
		sr_geo*=mas[i];
	}
	sr_ar/=N;
	sr_geo = pow(sr_geo, 1.0/N);
	printf("%lf %lf", sr_ar, sr_geo);
	return 0;
}
